<p id="notice"><%= notice %></p>

<h1>Listing Admin Alerts</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Category</th>
      <th>Email</th>
      <th>Price</th>
      <th>Deadline</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_alerts.each do |admin_alert| %>
      <tr>
        <td><%= admin_alert.description %></td>
        <td><%= admin_alert.category %></td>
        <td><%= admin_alert.email %></td>
        <td><%= admin_alert.price %></td>
        <td><%= admin_alert.deadline %></td>
        <td><%= admin_alert.status %></td>
        <td><%= link_to 'Show', admin_alert %></td>
        <td><%= link_to 'Edit', edit_admin_alert_path(admin_alert) %></td>
        <td><%= link_to 'Destroy', admin_alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

